.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas editando: 
		%strong
			= @article.description
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to articles_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					= link_to @article, class: 'btn btn-primary' do
						%span.glyphicon.glyphicon-info-sign
						Ver
					%h1 Editando art√≠culo

				= form_for @article, html: { class: "form-horizontal", role: "form" } do |f|
					= render partial: 'articles/form', locals: { f: f }