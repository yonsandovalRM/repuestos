.row
	.col-md-8
		.panel
			.panel-body

				.table-responsive
					%table.table.table-striped.table-bordered.table-hover.homelist
						%thead
							%tr
								%th Vendedor
								%th Pago
								%th NÂº Doc.
								%th Tipo
								%th Pago
								%th Cliente
								%th
								%th
								%th

						%tbody
							- @sales.each do |sale|
								%tr
									%td= sale.user.username
									%td
										-if sale.payment_method.present?
											= sale.payment_method.name
			
									%td= sale.number_doc
									%td
										-if sale.type_document.present?
											= sale.type_document.name
			
									%td
										-if sale.status_payment.present?
											= sale.status_payment.name
			
									%td
										-if sale.customer.present?
											= sale.customer.name
			
									%td
										= link_to sale, :class=>"btn btn-info" do
											%i.fa.fa-eye
									%td
										= link_to edit_sale_path(sale), :class=>"btn btn-warning" do
											%i.fa.fa-pencil-square-o
									%td
										= link_to  sale, data: { confirm: 'Estas seguro de eliminar?' }, method: :delete, :class=>"btn btn-danger" do
											%i.fa.fa-trash-o
	.col-md-4
		.panel
			.panel-body
				= link_to new_sale_path, class: 'btn btn-success btn-block' do
					%span.glyphicon.glyphicon-plus
					Nueva venta
