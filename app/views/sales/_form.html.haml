= form_for @sale, html: {  role: "form" } do |f|
  -if @sale.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"

      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg

  
  .row
    .col-md-3
      .form-group
        %a{:href => customers_path, "data-remote"=> "true" , :class=>"btn btn-primary btn-block"}
          Seleccione un cliente
      .form-group
        = f.label "Run", :for => :run
        %input{:type => "text", :id => "customerRun", :class => "form-control", :disabled => "true"}
      .form-group
        = f.label "Nombre", :for => :customer_id
        %input{:type => "text", :id => "customerName", :class => "form-control", :disabled => "true"}
    

       
      
        
    .col-md-3
      .form-group
        = f.label "Tipo de documento", :for => :type_document_id
        = f.collection_select :type_document_id, TypeDocument.all, :id, :name,  {prompt: "Seleccione tipo"}, {:id=> 'selectTypeDocument', :class => 'form-control', :required => "true"}
        = link_to new_type_document_path, remote: true do
          Nuevo tipo de documento
      .form-group
        = f.label "Número de documento", :for => :number_doc
        = f.text_field :number_doc, class: 'form-control', :required => "true"
        = f.hidden_field :customer_id, :id=>"customerID"
        %small.text-muted
          Para tipo boleta, el número sería ej: 213 
      
    .col-md-3
      .form-group
        = f.label "Método de pago(*)", :for => :payment_method_id
        = f.collection_select :payment_method_id, PaymentMethod.all, :id, :name,  {prompt: "Seleccione método de pago"}, {:id=> 'selectPayment', :class => 'form-control', :required => "true"}
      .form-group
        = f.label "Estado de pago(*)", :for => :status_payment_id
        = f.collection_select :status_payment_id, StatusPayment.all, :id, :name,  {prompt: "Seleccione estado de pago"}, {:id=> 'selectStatusPayment', :class => 'form-control', :required => "true"}
    .col-md-3
      .form-group
        = f.label "Observaciones", :for => :observation
        = f.text_area :observation, :rows =>"5", class: 'form-control'

    .col-md-12
      .form-group
        = f.submit class: 'btn btn-success', :value => "Crear venta"


    


