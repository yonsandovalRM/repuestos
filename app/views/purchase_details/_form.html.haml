= form_for @purchase_detail, html: { class: "form-horizontal", role: "form" } do |f|
  -if @purchase_detail.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@purchase_detail.errors.count, "error")} prohibited this purchase_detail from being saved:"

      %ul
        - @purchase_detail.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label "Artículo", :for => :article_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.collection_select :article_id, Article.all, :id, :description,  {prompt: "Artículo"}, {:id=>'selectArticle',:class => 'form-control', :required => "true"}
                  
  .form-group
    = f.label "Stock tienda", :for => :stock, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :stock, class: 'form-control'
  .form-group
    = f.label "Stock bodega", :for => :stock_store, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :stock_store, class: 'form-control'
  .form-group
    = f.label "Precio compra", :for => :pin, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :pin, class: 'form-control'
 
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
