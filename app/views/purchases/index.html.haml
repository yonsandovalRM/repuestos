.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas viendo: 
		%strong
			Compras
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to new_purchase_path, class: 'btn btn-success' do
						%span.glyphicon.glyphicon-plus
						Nueva compra
					%h1 Listado de compras
					%span 
						ArtÃ­culos comprados para tienda
						= @stock
					%br
					%span 
						ArtÃ­culos comprados para bodega
						= @stock_store
				.table-responsive
					%table.table.table-striped.table-bordered.table-hover#listado
						%thead
							%tr
								%th N. Documento
								%th Proveedor
								%th Rut
								%th Tipo
								%th Fecha
								%th Estado
								%th
								%th
								%th

						%tbody
							- @purchases.each do |purchase|
								%tr
									%td= purchase.number_doc
									%td= purchase.supplier.bname
									%td= purchase.supplier.rut
									%td= purchase.type_document.name
									%td= purchase.date_doc.strftime('%d-%m-%Y')
									%td= purchase.status
									%td
										= link_to purchase, :class=>"btn btn-info" do
											%i.fa.fa-eye
									%td
										= link_to edit_purchase_path(purchase), :class=>"btn btn-warning" do
											%i.fa.fa-pencil-square-o
									%td
										= link_to  purchase, data: { confirm: 'Estas seguro?' }, method: :delete, :class=>"btn btn-danger" do
											%i.fa.fa-trash-o

