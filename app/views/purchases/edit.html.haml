.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas editando: 
		%strong
			= @purchase.number_doc
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to purchases_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					= link_to @purchase, class: 'btn btn-primary' do
						%span.glyphicon.glyphicon-info-sign
						Ver
					%h5 Editando compra
					%hr

				= render 'form'
