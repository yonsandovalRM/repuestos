= form_for @purchase, html: { role: "form" } do |f|
	-if @purchase.errors.any?
		.alert.alert-danger.alert-dismissable{role: "alert"}
			%button.close{type: "button", data: {dismiss: "alert"} }
				%span{aria: {hidden: "true"} } &times;
				%span.sr-only Close
			%h4= "#{pluralize(@purchase.errors.count, "error")} prohibited this purchase from being saved:"

			%ul
				- @purchase.errors.full_messages.each do |msg|
					%li= msg

	.row
		.col-md-3
			.form-group
				= f.label "Proveedor(*)", :for => :supploer_id
				.input-group
					= f.autocomplete_field :supplier_id, autocomplete_supplier_bname_purchases_path, :id_element => "#supplierID", :class => "form-control"
					.input-group-btn
						= link_to new_supplier_path, remote: true, :class => "btn btn-default" do
							%i.fa.fa-plus
					= f.hidden_field :supplier_id, :id => "supplierID"
				%small.text-muted
					Seleccione un proveedor
				
			.form-group
				= f.label "Número de documento(*)", :for => :number_doc
				= f.text_field :number_doc, class: 'form-control', :required => "true"
				%small.text-muted
					Ej: 02213 
		.col-md-3
			.form-group
				= f.label "Tipo de documento(*)", :for => :type_document_id
				= f.collection_select :type_document_id, TypeDocument.all, :id, :name,  {prompt: "Seleccione tipo"}, {:id=> 'selectTypeDocument', :class => 'form-control', :required => "true"}
				= link_to new_type_document_path, remote: true do
					Nuevo tipo de documento
			.form-group
				= f.label "Fecha de documento(*)", :for => :date_doc
				.input-group.date#datetimepicker
					= f.text_field :date_doc, class: 'form-control', :required => "true"
					%span.input-group-addon
						%i.fa.fa-calendar
		.col-md-3
			
			.form-group
				= f.label "Estado(*)", :for => :status
				= f.collection_select :status, State.all, :name, :name,  {prompt: "Seleccione estado"}, {:id=> 'selectState', :class => 'form-control', :required => "true"}
				
				= link_to new_state_path, remote: true do
					Nuevo estado
			
		.col-md-3
			.form-group
				= f.label "Método de pago(*)", :for => :payment_method_id
				= f.collection_select :payment_method_id, PaymentMethod.all, :id, :name,  {prompt: "Seleccione método de pago"}, {:id=> 'selectPayment', :class => 'form-control', :required => "true"}
			.form-group
				= f.label "Estado de pago(*)", :for => :status_payment_id
				= f.collection_select :status_payment_id, StatusPayment.all, :id, :name,  {prompt: "Seleccione estado de pago"}, {:id=> 'selectStatusPayment', :class => 'form-control', :required => "true"}
		.col-md-12
			.form-group
				= f.label "Observaciones", :for => :observation
				= f.text_area :observation, class: 'form-control'

	-# = f.fields_for :purchase_details do |builder|
	-# 	= render 'purchase_detail_fields', :f => builder
	-# .links
	-# 	= link_to_add_association 'Nuevo artículo', f, :purchase_details


	.form-group
		= f.submit class: 'btn btn-primary', :value => "Guardar compra"


