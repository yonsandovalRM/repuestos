.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas viendo el tipo de artículo:
		%strong
			= @type_article.name
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to type_articles_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					= link_to edit_type_article_path(@type_article), class: 'btn btn-primary' do
						%span.glyphicon.glyphicon-pencil
						Editar
					%h1 Viendo familia de artículos

				%dl.dl-horizontal
					%dt Nombre:
					%dd= @type_article.name
