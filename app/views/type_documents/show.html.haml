.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas viendo el tipo de documento:
		%strong
			= @type_document.name
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to type_documents_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					= link_to edit_type_document_path(@type_document), class: 'btn btn-primary' do
						%span.glyphicon.glyphicon-pencil
						Editar
					%h1 Viendo tipo de documento

				%dl.dl-horizontal
					%dt Nombre:
					%dd= @type_document.name
