.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas viendo: 
		%strong
			= @brand.name
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to brands_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					= link_to @brand, class: 'btn btn-primary' do
						%span.glyphicon.glyphicon-info-sign
						Ver
					%h1 Editando marca

				= render 'form'
