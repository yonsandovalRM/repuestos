.row
  .col-md-12
    .panel
      .panel-body
        .page-header
          = link_to new_brand_path, class: 'btn btn-success' do
            %span.glyphicon.glyphicon-plus
            Nueva Marca
          %h1 Listado de marcas

        .table-responsive
          %table.table.table-striped.table-bordered.table-hover
            %thead
              %tr
                %th Nombre
                %th
                %th
                %th

            %tbody
              - @brands.each do |brand|
                %tr
                  %td= brand.name
                  %td
                    = link_to brand, :class=>"btn btn-info" do
                      %i.fa.fa-eye
                  %td
                    = link_to edit_brand_path(brand), :class=>"btn btn-warning" do
                      %i.fa.fa-pencil-square-o
                  %td
                    = link_to  brand, data: { confirm: 'Estas seguro?' }, method: :delete, :class=>"btn btn-danger" do
                      %i.fa.fa-trash-o
