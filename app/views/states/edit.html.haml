.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas editando el estado:
		%strong
			= @state.name
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to states_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					= link_to @state, class: 'btn btn-primary' do
						%span.glyphicon.glyphicon-info-sign
						Ver
					%h1 Editando estado
				= form_for @state, html: { class: "form-horizontal", role: "form" } do |f|
					= render partial: 'states/form', locals: { f: f }
				
