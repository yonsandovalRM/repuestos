.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas viendo:
		%strong
			Estados
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to new_state_path, class: 'btn btn-success' do
						%span.glyphicon.glyphicon-plus
						Nuevo estado
					%h1 Listado de estados

				.table-responsive
					%table.table.table-striped.table-bordered.table-hover#listado
						%thead
							%tr
								%th Nombre
								%th
								%th
								%th

						%tbody
							- @states.each do |state|
								%tr
									%td= state.name
									%td
										= link_to state, :class=>"btn btn-info" do
											%i.fa.fa-eye
									%td
										= link_to edit_state_path(state), :class=>"btn btn-warning" do
											%i.fa.fa-pencil-square-o
									%td
										= link_to  state, data: { confirm: 'Estas seguro?' }, method: :delete, :class=>"btn btn-danger" do
											%i.fa.fa-trash-o
