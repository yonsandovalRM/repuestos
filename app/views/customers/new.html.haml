.breadcrumb
	%li
		%a{:href => root_path}
			%i.fa.fa-home
	%li.active
		Estas creando: 
		%strong
			Cliente
.row
	.col-md-12
		.panel
			.panel-body
				.page-header
					= link_to customers_path, class: 'btn btn-default' do
						%span.glyphicon.glyphicon-list-alt
						Volver
					%h1 Nuevo cliente

				= form_for @customer, html: { class: "form-horizontal", role: "form" } do |f|
					= render partial: 'customers/form', locals: { f: f }
